@model EmployeeModels
@{
    ViewData["Title"] = "Employee";
}


    <h1 class="text-center">Add Employee Details here</h1>
    @using (Html.BeginForm("AddEmployee", "Home", FormMethod.Post))
    {
        <div>
            First Name : @Html.TextBoxFor(x=>x.FirstName, new { @class = "form-control", placeholder = "Enter your first name" })
            @Html.ValidationMessageFor(x => x.FirstName)
        </div>

         <div>
            Last Name : @Html.TextBoxFor(x=>x.LastName, new { @class = "form-control", placeholder = "Enter your last name" })
            @Html.ValidationMessageFor(x => x.LastName)
        </div>

         <div>
            Mobile no. : @Html.TextBoxFor(x=>x.Phone, new { @class = "form-control", placeholder = "Enter your Mobile number" })
            @Html.ValidationMessageFor(x => x.Phone)
        </div>

         <div>
            Email : @Html.TextBoxFor(x=>x.Email, new { @class = "form-control", placeholder = "Enter your email id" })
            @Html.ValidationMessageFor(x => x.Email)
        </div>

        <div class="pb-2"><button type="submit"  class="btn btn-info">Save</button></div>
    }
